{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Netlify Function",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/netlify/functions/${fileBasenameNoExtension}.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Current File",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Netlify Dev",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/netlify",
      "args": ["dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Test Function Locally",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test/test-function.js",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "Attach to Netlify Dev",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Debug Netlify Functions",
      "configurations": ["Netlify Dev", "Attach to Netlify Dev"]
    }
  ]
}
