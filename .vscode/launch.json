{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dev: Start Netlify (background)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/netlify",
      "args": [
        "dev",
        "--dir",
        "src",
        "--functions",
        "netlify/functions",
        "--port",
        "8888",
        "--offline",
        "--no-open"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Tests: All",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["test"],
      "env": {
        "BASE_URL": "http://localhost:8888"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Tests: Quality",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test/test-quality.js",
      "env": {
        "BASE_URL": "http://localhost:8888"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Tests: Reliability",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test/test-reliability.js",
      "env": {
        "BASE_URL": "http://localhost:8888"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Tests: ATS",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test/test-ats.js",
      "env": {
        "BASE_URL": "http://localhost:8888"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
