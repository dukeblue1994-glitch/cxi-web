# Environment Variables for CXI Web Application

# Netlify Environment Variables
# These should be set in Netlify dashboard: Site settings > Environment variables

# GitHub Integration (Required for data persistence)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=dukeblue1994-glitch/cxi-web

# Netlify Blobs Store Name
NETLIFY_STORE_NAME=cxi-nudges

# Application Settings
NODE_ENV=development
APP_NAME=CXI Demo
APP_VERSION=1.0.0

# Email Settings (if using email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# API Configuration
API_BASE_URL=https://your-site.netlify.app
CORS_ORIGIN=https://your-site.netlify.app

# Debug Settings
DEBUG=false
LOG_LEVEL=info

# Security
# SESSION_SECRET=your_random_session_secret_here

# Database/Storage Settings
MAX_RETRIES=3
RETRY_DELAY=1000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_LOGGING=true
ENABLE_CRON_JOBS=true

# Development Settings (local only)
DEV_PORT=8888
NETLIFY_DEV_PORT=8888
