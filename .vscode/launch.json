{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dev: Start Netlify (background)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/netlify",
      "args": [
        "dev",
        "--dir",
        "dist",
        "--functions",
        "netlify/functions",
        "--port",
        "8888",
        "--offline",
        "--no-open"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Tests: All (BASE_URL=8888)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/npm",
      "args": [
        "test"
      ],
      "env": {
        "BASE_URL": "http://localhost:8888"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Tests: Quality",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/node",
      "args": [
        "${workspaceFolder}/test/test-quality.js"
      ],
      "env": {
        "BASE_URL": "http://localhost:8888"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Tests: Reliability",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/node",
      "args": [
        "${workspaceFolder}/test/test-reliability.js"
      ],
      "env": {
        "BASE_URL": "http://localhost:8888"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Tests: ATS",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/node",
      "args": [
        "${workspaceFolder}/test/test-ats.js"
      ],
      "env": {
        "BASE_URL": "http://localhost:8888"
      },
      "console": "integratedTerminal"
    }
  ]
}
